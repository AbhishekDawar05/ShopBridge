@model IEnumerable<ShopBridgeMVC.ViewModel.ProductViewModel>

<p>
    @Html.ActionLink("Create New Product", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManufacturedBY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManufacturedBY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.ActionLink(linkText: "Edit", actionName: "Edit", controllerName: "Home", routeValues: new { productid = @item.ID }, htmlAttributes: null) |
            @Html.ActionLink(linkText: "Delete", actionName: "Delete", controllerName: "Home", routeValues: new { productid = @item.ID }, htmlAttributes: null) |
      
        </td>
    </tr>
}

</table>
